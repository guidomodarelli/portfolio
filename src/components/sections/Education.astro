---
import Section from "../Section.astro";
import { education } from "@cv-common";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, startDate, endDate, studyType, area }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Present";
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>
                <time>{years}</time>
              </header>
              <footer>
                <p>{studyType}'s Degree in {area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
    gap: 2rem;
  }

  time {
    font-size: 0.85rem;
    color: #555;
    text-wrap: nowrap;
  }
</style>
